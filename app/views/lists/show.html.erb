<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1485846234645-a62644f84728?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1759&q=80)">
  <%= @list.name %>
</div>

<div class="container">
  <div class="row justify-content-around">
    <div class="col-4">
      <h2>All the movies: </h2>
    </div>
    <div class="col-4">
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>
    </div>
    <div class="col-12">
      <% @list.movies.each do |movie|  %>
        <%= movie.title %>
        <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' do %>
          <i class="fa-solid fa-xmark"></i>
        <% end %>
      <% end %>
      <hr>
      <%= link_to "Homepage", lists_path %>
    </div>
  </div>
</div>
